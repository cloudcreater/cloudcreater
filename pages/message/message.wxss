  background-color: rgb(222, 222, 222);
}

.gogogo{
  font-size: 30rpx;
  top:92.5rpx;
  left: 200rpx;
  font-weight: 200;
  position: absolute;
}

.icon{
  position: absolute;
  right: 160rpx;
  top: 90rpx;
}

.icon image{
  width: 65rpx;
  height: 50rpx;
  
}

.date{
  position: absolute;
  font-weight: 200;
  font-size: 15px;
  top: 98rpx;
  right: 30rpx;
}

.items{
  width: 180rpx;
