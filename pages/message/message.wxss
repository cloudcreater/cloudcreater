/* pages/message/message.wxss */
.topbar {
  width: 100%;
  height: 80rpx;
  border-top: solid gainsboro 1px;
  border-bottom: solid gainsboro 0.5px;
  position: relative;
}

.left-mine{
  font-size: 30rpx; 
  margin-left: 20rpx;
  line-height: 76rpx;
  height: 76rpx;
}

.right-mine{
  position: absolute;
  right: 20rpx;
  top: 0px;
}

.op-item{
  margin-left: 20rpx;
  margin-top: 12rpx;
}

.op-item image{
  height: 48rpx;
  width: 48rpx;
}

.msg_main{
  width: 100%;
  height: 160rpx;
  position: relative;
}

.headimg{
  position: absolute;
  left: 20rpx;
