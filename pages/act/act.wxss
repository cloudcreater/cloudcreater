/* pages/act/act.wxss */

.forms{
  position: relative;
  width: 100%;
  height: 1000rpx;
}

.form_item{
  align-items: center;
  width: 100%;
  height: 180rpx;
}

.title {
  width: fit-content;
  margin-left: 2.5%;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}

.detail{
  width: 92%;
  margin-left: 4%;
  font-size: 36rpx;
  font-weight: 800;
}

.pic {
  position: relative;
  left: 2.5%;
  width: 95%;
  height: 400rpx;
}

.line {
  width: 95%;
  margin-left: 2.5%;
  border-top: solid 2px;
  margin-bottom: 20rpx;
}

.red {
  display: inline-block;
  color: red;
}

input {
  width: 60%;
  height: 80rpx;
  border-radius: 10px;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  padding-left: 1em;
  background-color: rgb(242, 242, 242);
}

.upload {
  width: 80%;
  height: 60rpx;
  border-radius: 10px;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: rgb(242, 242, 242);
  font-size: 30rpx;
  color: rgb(81, 81, 81);
  line-height: 60rpx;
  text-align: center;
}

.btn {
  text-align: center;
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 30rpx;
  color: white;
  font-size: 34rpx;
  background-color: rgb(60, 108, 246);
  margin-bottom: 40rpx;
}

.tips {
  margin-top: 10rpx;
  font-size: 30rpx;
  color: rgb(181, 181, 181);
}

.todetail{
  width: fit-content;
  margin-top: 40rpx;
  margin-left: 230rpx;
  margin-bottom: 40rpx;
  font-size: 48rpx;
  color: red;
  font-weight: 800;
  border-bottom: solid 2px;
}

.group{
  margin-left: 5%;
  width: 90%;
  height: fit-content;
}

.radio{
  display: block;
  margin-left: 80rpx;
  margin-top: 20rpx;
}

.box{
  display: inline-block;
  width: fit-content;
  height: 60rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}
