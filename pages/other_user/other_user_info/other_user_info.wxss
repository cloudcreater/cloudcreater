/* pages/other_user/other_user/other_user_info.wxss */
.bgcolor {
  width: 100%;
  height: 1400rpx;
  background-color: rgb(241, 241, 241);
  position: relative;
}

.title{
  width: 100%;
  height: 100rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  text-indent: 1em; 
}

.profile{
  position: relative;
  width: 100%;
  height: 180rpx;
  background-color: white;
  line-height: 180rpx;
  font-size: 30rpx;
  text-indent: 1em;
  border-bottom: solid rgb(228, 228, 228) 0.5px;
}

.profile .profilephoto{
  position: absolute;
  top: 30rpx;
  width: 140rpx;
  height: 140rpx;
  right: 70rpx;
  border-radius: 100%;
}

.profile image{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 80rpx;
  right: 20rpx;
}

.user_item{
  position: relative;
  width: 100%;
  height: 120rpx;
  background-color: white;
  line-height: 120rpx;
  font-size: 30rpx;
  text-indent: 1em;
  border-bottom: solid rgb(228, 228, 228) 0.5px;
}

.user_item text{
  position: absolute;
  color: rgb(163, 163, 163);
  font-size: 34rpx;
  font-weight: 300;
  top: 0px;
  right: 70rpx;
}

.user_item image{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 34rpx;
  right: 270rpx;
}
