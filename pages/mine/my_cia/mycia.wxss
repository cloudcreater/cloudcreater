/* pages/mine/my_cia/mycia.wxss */

.underline {
  border-bottom: solid gray 2px;
}

.topbar {
  width: 100%;
  height: 80rpx;
  border-top: solid gainsboro 0.5px;
  border-bottom: solid gainsboro 0.5px;
}

.top-item {
  text-align: center;
  width: 33%;
  line-height: 76rpx;
  height: 76rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.bgcolor {
  width: 100%;
  height: 560rpx;
  background-color: rgb(241, 241, 241);
  position: relative;
}

.main {
  width: 100%;
  height: 520rpx;
  background-color: white;
  font-size: 28rpx;
  position: absolute;
  top: 0;
}

.info-loc {
  margin: 30rpx auto;
  width: 660rpx;
  position: relative;
  height: 480rpx;
}

.label {
  display: inline-block;
  margin: 0 14rpx;
  padding: 0 24rpx;
  width: fit-content;
  height: 44rpx;
  text-align: center;
  border-radius: 38rpx;
  line-height: 42rpx;
  background-color: rgb(231, 231, 231);
  font-size: 22rpx;
  color: black;
  font-weight: 400;
}

.data {
  font-size: 22rpx;
}

.namespace {
  width: 100%;
  height: 86rpx;
  font-size: 20rpx;
  position: relative;
  color: rgb(161, 161, 161);
}

.namespace image {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  border-radius: 100%;
}

.textpart {
  display: inline-block;
  position: absolute;
  left: 60rpx;
  top: 4rpx;
}

.introduce {
  width: 440rpx;
  height: 240rpx;
  text-indent: 2em;
  margin-top: 30rpx;
  margin-left: 10rpx;
  float: left;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 36rpx;
}

.img-loc {
  width: 160rpx;
  height: 140rpx;
  float: right;
  margin-right: 30rpx;
  margin-top: 50rpx;
}

.foot {
  font-size: 26rpx;
  color: rgb(161, 161, 161);
  display: block;
  width: fit-content;
  margin-left: 10rpx;
}

.selectBox{
  position: absolute;
  bottom: 8rpx;
  width: 80rpx;
  height: 50rpx;
  font-size: 26rpx;
  line-height: 50rpx;
  border-radius: 10px;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.05);
  color: rgb(0, 0, 0);
  font-weight: 500;
  border:solid rgb(0, 0, 0) 1px;
}

.del_btn{
  right: -10rpx;
}

.edit_btn{
  right: 120rpx;
}

.img-loc image {
  width: 200rpx;
  height: 160rpx;
}

.op_btn {
  z-index: 10;
  width: 55rpx;
  height: 100rpx;
  padding-top: 20rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 32rpx;
  border: solid rgba(0, 0, 0, 0.719);
  border-left: none;
  border-top-right-radius: 15px;
  border-bottom-right-radius: 15px;
  position: fixed;
  left: 0;
  bottom: 10%;
  font-weight: 600;
  color: white;
  background-color: rgba(0, 0, 0, 0.719);
}

.selected{
  background-color: white;
  border-color:rgba(0, 0, 0, 0.719);
  color: rgba(0, 0, 0, 0.719);
}

.hide {
  display: none;
}

.show {
  display: block;
}

