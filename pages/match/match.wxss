/* pages/match/match.wxss */

.title {
  width: 95%;
  margin-left: 2.5%;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}

.detail{
  width: 95%;
  margin-left: 2.5%;
  font-size: 36rpx;
  font-weight: 800;
}

.pic {
  width: 95%;
}

.line {
  width: 95%;
  margin-left: 2.5%;
  border-top: solid 2px;
  margin-bottom: 20rpx;
}

.red {
  display: inline-block;
  color: red;
}

input {
  width: 60%;
  height: 80rpx;
  border-radius: 10px;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  padding-left: 1em;
  background-color: rgb(242, 242, 242);
}

.upload {
  width: 80%;
  height: 60rpx;
  border-radius: 10px;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: rgb(242, 242, 242);
  font-size: 30rpx;
  color: rgb(81, 81, 81);
  line-height: 60rpx;
  text-align: center;
}

.btn {
  text-align: center;
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 30rpx;
  color: white;
  font-size: 34rpx;
  background-color: rgb(60, 108, 246);
  margin-bottom: 40rpx;
}

.tips {
  margin-top: 10rpx;
  font-size: 30rpx;
  color: rgb(181, 181, 181);
}

.todetail{
  width: fit-content;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  font-size: 48rpx;
  color: red;
  font-weight: 800;
  border-bottom: solid 2px;
}
