/* pages/community/create_community/create_community.wxss */
.bgcolor{
  width: 100%;
  height: 1600rpx;
  background-color: rgb(242, 242, 242);
}

.selectlabel{
  position: relative;
  width: 100%;
  height: 100rpx;
  text-indent: 1em;
  line-height: 100rpx;
  background-color: white;
  top: 50rpx;
}

.selectlabel image{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: 20rpx;
  top: 30rpx;
}

.title{
  position: relative;
  left: 35rpx;
  top: 80rpx;
  font-size: 34rpx;
}

.info{
  position: relative;
  width: 100%;
  height: 460rpx;
  background-color: white;
  top: 110rpx;
}

.info_item{
  width: 90%;
  margin-left: 5%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: solid rgb(242, 242, 242);
  font-size: 34rpx;
}

.info_item image{
  position: relative;
  border-radius: 100%;
  left: 20rpx;
  top: 10rpx;
  width: 160rpx;
  height: 160rpx;
}

input{
  width: 400rpx;
  position: relative;
  display: inline-block;
  border-radius: 5px;
  background-color: rgb(242, 242, 242);
}

.info_item input{
  left: 20rpx;
  top: 15rpx;
}

.invite{
  position: relative;
  width: 100%;
  height: 300rpx;
  top: 180rpx;
  background-color: white;
  font-size: 30rpx;
}

.intro{
  position: absolute;
  width: 90%;
  left: 5%;
  top: 30rpx;
  color: rgb(121, 121, 121);
}

.input_loc{
  position: absolute;
  top: 150rpx;
  left: 100rpx;
}

.input_loc input{
  position: absolute;
  top: 0rpx;
  left: 180rpx;
}

.btn_loc{
  position: relative;
  top: 240rpx;
  width: 100%;
  height: 200rpx;
  background-color: white
}

.btn{
  position: absolute;
  width: 300rpx;
  height: 100rpx;
  border-radius: 15px;
  text-align: center;
  line-height: 100rpx;
  left: 120rpx;
  top: 55rpx;
  background-color: rgb(228, 228, 228);
  font-size: 30rpx;
}

.city{
  display: inline-block;
  position: relative;
  left: 20rpx;
}

.tips{
  display: inline-block;
  font-size: 30rpx;
  margin-left: 50rpx;
  color: rgb(121, 121, 121);
}