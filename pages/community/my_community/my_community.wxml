<!--pages/community/my_community/my_community.wxml-->
<view class="topbar">
  <view class="items left {{bottom_line==1?'.underline':''}}" bindtap="mine">我发布的</view>
  <view class="items right {{bottom_line==2?'.underline':''}}" bindtap="not">我加入的</view>
</view>
<block wx:if="{{info!=null}}">
  <view style='margin-left:250rpx;'>暂无此类社区</view>
</block>
<block wx:else>
  <view class="communities_item" wx:for="{{communities}}" wx:for-index="index" wx:for-item="community" data-item='{{community}}' bindtap='tomain'>
    <image class="head_img" src='{{community.logo}}'></image>
    <view class="name">{{community.name}}</view>
    <view class="location">
      <image src="../../../imgs/location.jpg"></image>
      {{community.city_str}}
    </view>
    <view class="label_loc">
      <view class="label">{{community.type}}</view>
      <view class="label">{{community.industry_type}}</view>
      <view class="label">
        <block wx:if="{{community.pass_code}}">
          内部群
        </block>
        <block wx:else>
          开放群
        </block>
      </view>
      <view class="label">
        <block wx:if="{{community.pass_code}}">
          需要验证
        </block>
        <block wx:else>
          不需要验证
        </block>
      </view>
    </view>
    <view class="focus">
      <image class="focusimg" src='../../imgs/com_focus.jpg' ></image>
    </view>
    <view class="join">
      <image class="joinimg" src='../../imgs/join.jpg' bindtap='join'></image>
    </view>
  </view>
</block>