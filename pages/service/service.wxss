/* pages/service/service.wxss */
.top{
  width: 100%;
  height: 80rpx;
  border-top: solid rgb(210, 210, 210) 1px;
  border-bottom: solid rgb(210, 210, 210) 1px;
}

.underline {
  border-bottom: solid gray 3px;
}

.location{
  float: left;
  height: 80rpx;
  width: 15%;
  font-size: 26rpx;
}

.picker{
  position: relative;
  bottom: 36rpx;
  left: 50rpx;
}

.location image{
  position: relative;
  top: 16rpx;
  left: 10rpx;
  width: 30rpx;
  height: 50rpx;
}

.bar{
  position: absolute;
  width: 85%;
  height: 80rpx;
  right: 0;
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  font-weight: 100;
  color: rgb(161, 161, 161);
  text-align: center;
  line-height: 80rpx;
}

.bar_item{
  width: 25%;
}

.main{
  width: 100%;
  height: 420rpx;
  background-color: rgba(241, 241, 241, 0.658);
}

.white_bg{
  position: relative;
  width: 100%;
  height: 84%;
  top: 8%;
  background-color: white;
}

.foot{
  position: absolute;
  width: 340rpx;
  height: 50rpx;
  left: 20rpx;
  bottom: 30rpx;
  font-size: 30rpx;
  color:rgb(148, 148, 148);
}

.white_bg image{
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  width: 340rpx;
  height: 220rpx;
}

.part_right{
  position: absolute;
  top: 20rpx;
  right: 0rpx;
  width: 380rpx;
  height: 300rpx;
}

.name{
  position: relative;
  font-size: 40rpx;
  font-weight: 800;
}

.address{
  position: relative;
  top: 12rpx;
  font-size: 30rpx;
  font-weight: 700;
}
.price{
  position: relative;
  font-size: 30rpx;
  top: 20rpx;
  font-weight: 700;
}
.phone{
  position: relative;
  top:20rpx;
  font-size: 30rpx;
  font-weight: 700;
}

.lebal{
  position: absolute;
  top: 250rpx;
  width: fit-content;
  height: 36rpx;
  padding: 6rpx 12rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 36rpx;
  background-color: rgb(25, 158, 216);
  border-radius: 10px;
  color: white;
}